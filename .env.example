# Job Application Agent Configuration

# LLM Provider Settings
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OLLAMA_BASE_URL=http://127.0.0.1:11434

# Output Settings
VERBOSE=false
DEFAULT_OUTPUT_FORMAT=console

# Encryption and Cache Settings
CACHE_ENCRYPTION_ENABLED=true
CACHE_AUTH_METHOD=password  # password, keyfile, yubikey
CACHE_KEYFILE_PATH=/path/to/your/keyfile
CACHE_EXPIRY_DAYS=90
CACHE_PASSWORD=your_encryption_password

# YubiKey Settings (if using hardware key authentication)
YUBIKEY_SERIAL=12345678
YUBIKEY_SLOT=2
YUBIKEY_PIN=your_yubikey_pin

# Neo4j Graph Database Settings (for future phases)
GRAPH_DB_ENABLED=false
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
NEO4J_DATABASE=neo4j

# User Profile (for graph database)
USER_ID=default_user
USER_NAME=Your Name
USER_EMAIL=your.email@example.com

# Resume Optimization Settings (for future phases)
RESUME_OPTIMIZATION_ENABLED=true
DEFAULT_TAILORING_STYLE=moderate
RESUME_STORAGE_DIR=/path/to/resume/storage
ATS_STRICT_MODE=false
KEYWORD_MATCH_THRESHOLD=70.0
ATS_SCORE_THRESHOLD=80.0

# Industry Analysis Settings (for future phases)
INDUSTRY_ANALYSIS_ENABLED=true
DEFAULT_INDUSTRY=technology
BENCHMARK_DATA_SOURCE=internal
SENIORITY_STRICT_MODE=false
INDUSTRY_FIT_THRESHOLD=70.0
SENIORITY_MATCH_THRESHOLD=60.0

# Interview Preparation Settings (for future phases)
INTERVIEW_PREP_ENABLED=true
DEFAULT_QUESTION_COUNT=10
MOCK_INTERVIEW_DURATION=30
PRACTICE_SESSION_DURATION=15
INTERVIEWER_STYLE=friendly
TRACK_PERFORMANCE=true
PERFORMANCE_RETENTION_DAYS=90

# Web Interface Settings (for future phases)
WEB_SERVER_ENABLED=true
WEB_HOST=127.0.0.1
WEB_PORT=8000
WEB_DEBUG=false
STATIC_DIR=web/static
TEMPLATES_DIR=web/templates
WEBSOCKET_TIMEOUT=300
MAX_CONNECTIONS=100
CORS_ORIGINS=*
SECRET_KEY=your-secret-key-here
